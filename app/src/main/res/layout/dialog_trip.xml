<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/trip_dialog_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/dialog_activity_icon"
                android:contentDescription="@string/trip_dialog_activity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_bike_black_24dp"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_dialog_icon"
            android:gravity="center_horizontal"
            android:textColor="@color/olive"
            android:textSize="@dimen/trip_dialog_title_size"
            android:text="@string/trip_title_default"/>

        <TextView
            android:id="@+id/dialog_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/dialog_where"
            android:textColor="@color/colorAccent"
            android:text="@string/trip_when_start_default"/>

        <TextView
            android:id="@+id/dialog_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/dialog_start"
            android:textColor="@color/orange"
            android:text="@string/trip_when_end_default"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_map"
        android:contentDescription="@string/trip_dialog_map"
        android:layout_width="@dimen/map_thumb_size"
        android:layout_height="@dimen/map_thumb_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stand_by"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/dialog_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/light_grey"
            android:text="@string/trip_menu_send"/>

        <Button
            android:id="@+id/dialog_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/light_grey"
            android:text="@string/trip_menu_detail"/>

        <Button
            android:id="@+id/dialog_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/light_grey"
            android:text="@string/trip_menu_edit"/>
    </LinearLayout>


</LinearLayout>