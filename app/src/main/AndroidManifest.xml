<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brianmk.simplecheck_in">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Main screen, shows list of trips -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Display selected trip -->
        <activity
            android:name=".TripViewerActivity"
            android:label="@string/trip_viewer_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brianmk.simplecheck_in.MainActivity" />
        </activity>
        <!-- Edit trip information -->
        <activity
            android:name=".TripEditorActivity"
            android:label="@string/trip_editor_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brianmk.simplecheck_in.MainActivity" />
        </activity>
    </application>

</manifest>